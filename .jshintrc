{
// Details: https://github.com/victorporof/Sublime-JSHint#using-your-own-jshintrc-options
// Example: https://github.com/jshint/jshint/blob/master/examples/.jshintrc
// Documentation: http://www.jshint.com/docs

  "node"          : true,
  "browser"       : true,
  "esnext"        : true,
  "globalstrict"  : true,
  "quotmark"      : true,
  "smarttabs"     : true,
  "trailing"      : true,
  "undef"         : true,
  "unused"        : true,


  "globals"       : {
//  MOCHA
    "describe"    : false,
    "it"          : false,
    "before"      : false,
    "beforeEach"  : false,
    "after"       : false,
    "expect"      : false,
    "require"     : false,
    "afterEach"   : false
  }
}
